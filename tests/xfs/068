seqfull=$0
seq=`basename $0`
seqres=$RESULT_DIR/$seq
echo "QA output created by $seq"

here=`pwd`
tmp=/tmp/$$
status=0	# success is the default!
trap "rm -rf $tmp.*; exit \$status" 0 1 2 3 15

. ./common/rc
. ./common/dump

# real QA test starts here
_supported_fs xfs
_supported_os Linux

_create_dumpdir_stress_num 4096
_do_dump_restore

# success, all done
exit
